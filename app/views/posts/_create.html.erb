<%= form_for @post, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
      <%= f.label :url, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :url, :class => 'form-control', :placeholder => 'Enter Link URL here', :id => 'scrape_url', :value => params[:url] || @post.url || '' %>
    </div>
  </div>
  <br>

  <div class="form-group">
      <%= f.label :tag_list, "Tags (seperated by commas)", :class => 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :tag_list %>
    </div>
  </div>

<br>
  <div class="form-group">
    <%= f.label :message, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :message, :class => 'form-control', :placeholder => 'Add a message' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit :class => 'btn btn-success' %>
  </div>
<%end%>



