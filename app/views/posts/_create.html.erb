<h1>Add something to LinkLove!</h1>

<%= form_for @post, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
      <%= f.label :url, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :url, :class => 'form-control', :placeholder => 'Enter Link URL here', :id => 'scrape_url', :value => params[:url] || @post.url || '' %>
    </div>
  </div>
  <br>

  <div class="form-group">
      <%= f.label :tag_list, "Tags", :class => 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :tag_list, :class => 'form-control' %>
    </div>
  </div>

<br>
  <div class="form-group">
    <%= f.label :title, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :title, :class => 'form-control', :placeholder => 'Add a Title' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :message, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :message, :class => 'form-control', :placeholder => 'Add a message' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.hidden_field :stream_id, :value => params[:stream_id] %>
    <%= f.submit :class => 'btn btn-success' %>
  </div>
<%end%>



