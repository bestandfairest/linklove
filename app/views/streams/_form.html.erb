<div class="row form">
  <div class="col-md-4">

    <%= form_for @stream, :html => {:multipart => true } do |f| %>
    <div class = "form group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, :class => 'form-control', :placeholder => "What do you want to call this stream?"  %>
    </div>

    <div class = "form group">
        <div class = "form group">
      <%= f.label :image %><br />
      <%= f.file_field :image %>
    </div>

    <div class = "form group">
      <%= f.label :invited_user %>
      <%= f.text_field :invited_user, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_field :message, :class => 'form-control' %>
    </div>

    <%=f.submit "Submit", :class => 'btn btn-primary' %>

    <% end %>
  </div>
</div>